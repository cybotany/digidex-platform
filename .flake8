[flake8]
ignore = E501
max-line-length = 120
per-file-ignores =
    # Ignoring imported but unused in __init__
    cybotany/views/__init__.py:F401,
    cybotany/models/__init__.py:F401
exclude = 
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__
max-complexity = 10